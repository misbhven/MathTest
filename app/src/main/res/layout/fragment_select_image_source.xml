<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/image_selectFrag"
    tools:context=".ui.students.SelectImageSourceFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_image_capture"
            android:text="camera"
            android:layout_gravity="center"
            android:layout_margin="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_image_source"
            android:layout_gravity="center"
            android:text="source"
            android:layout_margin="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIXABAY"
            android:id="@+id/select_image_pixabay"
            android:layout_gravity="center"
            android:layout_margin="8dp"/>

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="8dp"
            android:id="@+id/image_select_imageView"
            android:tag="bg"
            android:src="@drawable/ic_baseline_person_24" />

        <Button
            android:id="@+id/select_image_doneBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:backgroundTint="#7CB342"
            android:text="Done" />


    </LinearLayout>




</FrameLayout>